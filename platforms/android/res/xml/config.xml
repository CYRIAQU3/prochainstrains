<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cyriaque.prochainstrains" version="2.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <splash density="land-xhdpi" src="www/res/screens/android/splash-land-xhdpi.png" />
    <splash density="port-xhdpi" src="www/res/screens/android/splash-port-xhdpi.png" />
    <name>Prochains Trains</name>
    <description>
       Les horaires des prochains trains dans les gares proches de vous.
    </description>
    <author email="cyriaquedelaunay@gmail.com" href="http://www.cyriaquedelaunay.fr">
        Cyriaque Delaunay  
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="splashscreen" value="splash" />
    <preference name="splashScreenDelay" value="10000" />
</widget>
