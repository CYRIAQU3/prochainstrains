<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cyriaque.prochainstrains" version="2.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Prochains Trains</name>
    <description>
       Les horaires des prochains trains dans les gares proches de vous.
    </description>
    <author email="cyriaquedelaunay@gmail.com" href="http://www.cyriaquedelaunay.fr">
        Cyriaque Delaunay  
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="splashscreen" value="splash" />
    <preference name="splashScreenDelay" value="10000" />

    <feature name="SplashScreen">
       <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
    </feature>
    <platform name="android">
        <splash src="www/res/screens/android/splash-land-xhdpi.png" density="land-xhdpi"/>
        <splash src="www/res/screens/android/splash-port-xhdpi.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>